@model IEnumerable<BizarreBazaar.Models.ProductListItem>

@{
    ViewBag.Title = "ProductIndex";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "ProductCreate")
</p>
@if (TempData.ContainsKey("SaveResult"))
{

    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

<div class="row panel panel-primary">
    <div class="col-md-12 col-sm-12 panel panel-heading panel-title text-center">

        @Html.DisplayNameFor(model => model.ProductID) |

        @Html.DisplayNameFor(model => model.Name) |

        @Html.DisplayNameFor(model => model.Price) 
        <br/>
    </div>

    @foreach (var item in Model)
    {

        <div class="panel-body pull-left">

            @Html.DisplayFor(modelItem => item.ProductID)
        </div>
        <div class="panel-body text-center">
            @Html.DisplayFor(modelItem => item.Name)
        </div>
        <div class="panel-body text-center">
            @Html.DisplayFor(modelItem => item.Price)
        </div>
        <div class="panel-footer">
            @Html.ActionLink("Edit", "ProductEdit", new { id = item.ProductID }) |
            @Html.ActionLink("Details", "ProductDetails", new { id = item.ProductID }) |
            @Html.ActionLink("Delete", "ProductDelete", new { id = item.ProductID })
        </div>
    }
</div>